import java.util.Scanner;

public class ShortestRoute {

	public static void main(String[] args) {

		Scanner input = new Scanner(System.in);
		int n = input.nextInt();
		int m = input.nextInt();

		GraphV0 graph = new GraphV0(n);

		for (int i = 0; i < m; i++) {
			n = input.nextInt();
			m = input.nextInt();
			graph.addUndirectedEdge(n, m);
			graph.setUndirectedWeight(n, m, input.nextInt());
		}

	}

}
